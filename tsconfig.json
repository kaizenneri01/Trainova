{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "@shared/*": ["packages/shared/src/*"],
      "@config/*": ["packages/config/*"]
    }
  },
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/config" },
    { "path": "./app/backend" },
    { "path": "./app/frontend" }
  ]
}
